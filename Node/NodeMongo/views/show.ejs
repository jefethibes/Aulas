<html>

<head>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet'
        type='text/css'>
    <title>PÃ¡gina de Listagem</title>
</head>

<body>
    <div>
        <div>
            <nav class="navbar navbar-inverse" role="navigation" style="padding-left:130px;">
                <ul class="nav navbar-nav">
                    <li><a href="/">Home</a></li>
                    <li class="active"><a href="/show">Show<span class="sr-only">(current)</span></a></li>
                    <li><a href="/showContact">ShowContact</a></li>
                    <li><a href="/contact">Contact</a></li>
                </ul>
            </nav>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="panel panel-default panel-table">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col col-xs-6">
                                    <h2 class="panel-title">Listagem de Registros</h2>
                                </div>
                                <div class="col col-xs-6 text-right">
                                    <a href="/" class="btn btn-primary a-btn-slide-text">
                                        <span class="fa fa-plus-circle" aria-hidden="true"></span>
                                        <span><strong>Novo</strong></span></a>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-bordered table-list">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>Sobrenome</th>
                                        <th class="text-center"><em class="fa fa-cog"></em></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% data.forEach(function(details) { %>
                                    <tr>
                                        </td>
                                        <td>
                                            <%= details.nome %>
                                        </td>
                                        <td>
                                            <%= details.sobrenome %>
                                        </td>
                                        <td align="center">
                                            <a href="/edit/<%= details._id %>" class="btn btn-default">
                                                <span class="fa fa-pencil" aria-hidden="true"></span>
                                                <span><strong>Editar</strong></span>
                                            </a>
                                            <a href="/delete/<%= details._id %>" class="btn btn-danger">
                                                <span class="fa fa-trash" aria-hidden="true"></span>
                                                <span><strong>Excluir</strong></span>
                                            </a>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
</body>

</html>