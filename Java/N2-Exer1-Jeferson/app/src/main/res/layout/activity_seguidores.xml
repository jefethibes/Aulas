<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9EF44336"
    tools:context=".Seguidores">

    <TextView
        android:id="@+id/teste"
        android:layout_width="116dp"
        android:layout_height="60dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="24dp"
        android:text="Login:"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idSeguidor" />

    <TextView
        android:id="@+id/loginSguidor"
        android:layout_width="167dp"
        android:layout_height="83dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="24dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/teste"
        app:layout_constraintTop_toBottomOf="@+id/idSeguidor" />

    <TextView
        android:id="@+id/idSeguidor"
        android:layout_width="159dp"
        android:layout_height="60dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="19dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="19dp"
        android:text="ID:"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="239dp"
        android:layout_height="64dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:text="Seguidor"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/idSeguidor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>